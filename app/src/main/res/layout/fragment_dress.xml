<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:layout_editor_absoluteY="479dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ConstraintLayout_Fragment_Dress"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progressBarFragmentDress"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:progressTintMode="add"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/pager_dress_fragment_screen_slide"
                app:layout_constraintTop_toTopOf="@+id/pager_dress_fragment_screen_slide"
                tools:ignore="MissingConstraints" />

            <android.support.v4.view.ViewPager
                android:id="@+id/pager_dress_fragment_screen_slide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:fontFamily="arial"
            android:textAlignment="center"
            android:textColor="@color/color_text_fragment_screen_slide_dress"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:text="@string/Size2"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:textAlignment="viewStart"
            android:textColor="@color/color_text_fragment_screen_slide_dress"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:text="@string/Cor"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:textAlignment="viewStart"
            android:textColor="@color/color_text_fragment_screen_slide_dress"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:text="@string/PreÃ§o"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:textAlignment="viewStart"
            android:textColor="@color/color_text_fragment_screen_slide_dress"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:text="@string/Type"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:textAlignment="viewStart"
            android:textColor="@color/color_text_fragment_screen_slide_dress"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:text="@string/Material"
            android:textAlignment="viewStart"
            android:textColor="?attr/colorPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:fontFamily="arial"
            android:textAlignment="viewStart"
            android:textColor="@color/color_text_fragment_screen_slide_dress"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRent"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/ubuntu"
            android:text="@string/Rent"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="@font/ubuntu"
            android:text="@string/COMMENTS"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>